<?xml version="1.0" encoding="UTF-8"?>
<burpcraft_blocks>
	<append xpath="/recipes">

		<!-- Add recipe for coal -->
		<recipe name="resourceCoal" count="1" craft_area="campfire" craft_tool="toolCookingGrill">
			<ingredient name="resourceWood" count="2"/>
		</recipe>

		<!-- Add recipe for raw barb wire -->
		<recipe name="barbedWireSheet" count="1">
			<ingredient name="resourceScrapIron" count="15"/>
		</recipe>

		<!-- Custom Variant Blocks -->
		<recipe name="ironDoorBlockVariantHelper" count="1">
			<ingredient name="resourceForgedIron" count="10" />
		</recipe>
		<recipe name="woodDoorBlockVariantHelper" count="1">
			<ingredient name="resourceWood" count="4" />
		</recipe>
		<recipe name="woodWindowBlockVariantHelper" count="1">
			<ingredient name="resourceWood" count="5" />
		</recipe>
		<recipe name="leatherFurnitureBlockVariantHelper" count="1">
			<ingredient name="resourceLeather" count="5" />
			<ingredient name="resourceNail" count="10" />
			<ingredient name="resourceWood" count="10" />
		</recipe>
		<recipe name="paintingBlockVariantHelper" count="1">
			<ingredient name="resourceWood" count="2" />
		</recipe>
		<recipe name="alternateWoodBlockVariantHelper" count="1">
			<ingredient name="resourceWood" count="4" />
		</recipe>
		<recipe name="technologyBlockVariantHelper" count="1" craft_area="workbench" >
			<ingredient name="resourceForgedIron" count="5"/>
			<ingredient name="resourceScrapPolymers" count="5"/>
			<ingredient name="resourceMechanicalParts" count="1"/>
			<ingredient name="resourceElectricParts" count="5"/>
		</recipe>
		<recipe name="alternateConcreteBlockVariantHelper" count="1">
			<ingredient name="resourceCement" count="10" />
		</recipe>
		<recipe name="alternateBrickBlockVariantHelper" count="1" craft_area="forge" >
			<ingredient name="resourceCement" count="10"/>
		</recipe>
		<recipe name="kitchenBlockVariantHelper" count="1" craft_area="workbench" >
			<ingredient name="resourceForgedIron" count="3"/>
			<ingredient name="resourceElectricParts" count="3"/>
			<ingredient name="resourceMechanicalParts" count="1"/>
		</recipe>
		<recipe name="genericBlockVariantHelper" count="1" craft_area="workbench" >
			<ingredient name="resourceForgedIron" count="3"/>
			<ingredient name="resourceWood" count="10"/>
			<ingredient name="resourceScrapPolymers" count="3"/>
		</recipe>
		<recipe name="constructionBlockVariantHelper" count="1" craft_area="workbench" >
			<ingredient name="resourceForgedIron" count="3"/>
			<ingredient name="resourceScrapPolymers" count="3"/>
			<ingredient name="resourceWood" count="10"/>
			<ingredient name="resourceRockSmall" count="10"/>
		</recipe>
		<recipe name="bulletproofWindowBlockVariantHelper" count="1" craft_area="forge" >
			<ingredient name="resourceCrushedSand" count="137"/>
			<ingredient name="resourceRockSmall" count="12"/>
			<ingredient name="unit_lead" count="50"/>
			<ingredient name="unit_iron" count="25"/>
			<ingredient name="unit_clay" count="25"/>
		</recipe>
		<recipe name="roomDecorBlockVariantHelper" count="1" craft_area="workbench" >
			<ingredient name="resourceForgedIron" count="3"/>
			<ingredient name="resourceWood" count="10"/>
			<ingredient name="resourceSpring" count="5"/>
			<ingredient name="resourceMetalPipe" count="5"/>
		</recipe>

		<!-- not currently gated by perks, but easier to craft with better skills -->
		<recipe name="lightsVariantHelper" count="1" craft_area="workbench" tags="perkAdvancedEngineering">
			<ingredient name="resourceForgedIron" count="4" />
			<ingredient name="resourceElectricParts" count="4" />
			<effect_group>
				<passive_effect name="CraftingIngredientCount" level="0,1,2,3,4" operation="perc_add" value=".5,.5,.5,.3,.15" tags="resourceForgedIron,resourceElectricParts" />
			</effect_group>
		</recipe>
	</append>
</burpcraft_blocks>